#include <iostream>

int main() {
	int n;
	std::cout << "Введите число строк: " << std::endl;
	std::cin >> n;
	double** A = new double* [n];
	for (int i = 0; i < n; ++i) {
		A[i] = new double[n];
	}
	double* B = new double[n];
	for (int i = 0; i < n; i++) {
		std::cout << "Введите элементы " << i + 1 << " строки: " << std::endl;
		for (int j = 0; j < n; j++) {
			std::cin >> A[i][j];
		}
	}
	std::cout << "Введите свободные элементы: ";
	for (int i = 0; i < n; i++) {
		std::cin >> B[i];
	}
	std::cout << "Прямой ход: " << std::endl;
	bool NeNull = false;
	for (int i = 0; i < n; i++) {
		if (A[i][i] == 0) {
			for (int j = i + 1; j < n; j++) {
				if (A[j][i] != 0) {
					for (int k = 0; k < n; k++) {
						double temp_A = A[i][k];
						A[i][k] = A[j][k];
						A[j][k] = temp_A;
					}
					double temp_B = B[i];
					B[i] = B[j];
					B[j] = temp_B;
					NeNull = true;
				}
				else {
					NeNull = false;
				}
			}
		}
		else {
			NeNull = true;
		}
		if (NeNull == true) {
			for (int j = i + 1; j < n; j++) {
				double temp = A[j][i] / A[i][i];
				for (int k = 0; k < n; k++) {
					A[j][k] -= temp * A[i][k];
				}
				B[j] -= temp * B[i];
			}
		}
		std::cout << "Операция " << i + 1 << ": " << std::endl;
		for (int j = 0; j < n; j++) {
			for (int k = 0; k < n; k++) {
				std::cout << A[j][k] << ' ';
			}
			std::cout << ' ' << B[j] << std::endl;
		}
	}
	int rankA = 0;
	int rankAB = 0;
	for (int i = 0; i < n; i++) {
		bool IsNull_A = false;
		for (int j = i; j < n; j++) {
			if (A[i][j] == 0) {
				IsNull_A = true;
			}
			else {
				IsNull_A = false;
				break;
			}
		}
		if (IsNull_A == false) {
			rankA++;
			rankAB++;
		}
		if ((IsNull_A == true) && (B[i] != 0)) {
			rankAB++;
		}
	}
	for (int i = 0; i < n; ++i) {
		bool isNullVertA = true;
		for (int j = 0; j < n; ++j) {
			if (A[j][i] != 0) {
				isNullVertA = false;
				break;
			}
		}
		if (isNullVertA == true) {
			rankA--;
		}
	}
	double* x = new double[n];
	if (rankA == rankAB) {
		if (rankA == n) {
			std::cout << "Система имеет единственное решение." << std::endl;
			std::cout << "Обратный ход: " << std::endl;
			for (int i = 0; i < n; i++) {
				for (int i = n - 1; i >= 0; i--) {
					x[i] = B[i];
					for (int j = i + 1; j < n; j++) {
						x[i] -= A[i][j] * x[j];
					}
					x[i] /= A[i][i];
				}
				std::cout << "x(" << i + 1 << ")= " << x[i] << std::endl;
			}
		}
		else {
			std::cout << "Система имеет бесконечное количесвто решений.";
		}
	}
	else {
		std::cout << "Система несовместна. Решений нет";
	}
	for (int i = 0; i < n; i++) {
		delete[] A[i];
	}
	delete[] A;
	delete[] B;
	delete[] x;
}
